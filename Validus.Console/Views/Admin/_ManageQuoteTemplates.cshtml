@model Validus.Models.Link

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <a href="#" title="Create Quote Template" data-bind="click: click_OpenCreateEditQuoteTemplateModal_Create" class="btn btn-primary"><i class="icon-plus-sign icon-white"></i> Create New Quote Template</a>
            <hr />
        </div>
    </div>
    
 

        <div class="span12">
            <div style="overflow: auto; width: auto;">
                <table class="table table-condensed table-striped table-bordered table-hover dataTables_paginate">
                    <caption>All Links</caption>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>RdlPath</th>
                            <th><img id="imageProcessingScreen" src="@Url.Content("~/Content/images/animated_progress.gif")"  style="height: 20px; width:20px;"  data-bind="style: {display : showImageProcessing_LoadingQuoteTemplates}" /></th>
                        </tr>
                    </thead>
                    <tbody data-bind="template: { foreach: ConsoleApp.vmManageQuoteTemplates.allQuoteTemplatesList }">
            
                        <tr data-bind="event: { click: $parent.onClickAllQuoteTemplatesItem }">
                            <td><span data-bind="text: Name" /></td>
                            <td>
                                <span data-bind="text: RdlPath" />
                            </td>
                            <td>
                                <a href="#" title="Edit" data-bind="click: $parent.click_OpenCreateEditQuoteTemplateModal_Edit, css: { 'disabled': $parent.editQuoteTemplateButton_Status() }" class="btn btn-primary"><i class="icon-pencil icon-white"></i></a>
                                <a href="#" title="Delete" data-bind="click: $parent.click_DeleteQuoteTemplate" class="btn btn-primary"><i class="icon-trash icon-white"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
        </div>
            

        <div class="row-fluid">

            <div class="span12">
       
                <hr />
 
            
            </div>
        </div>


        <div class="row-fluid">
            <!-- span -->
            <div class="span4">
                <fieldset>

                    <select data-bind="options: teamList, optionsText: 'Title', optionsValue: 'Id', optionsCaption: 'Select Team', value: selectedTeam" ></select>        
                    <table class="table table-condensed table-striped table-bordered table-hover dataTables_paginate" width="200px">
                        <caption>Additional QuoteTemplates for Team</caption>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>RdlPath</th>
                            </tr>
                        </thead>
                        <tbody data-bind="template: { foreach: teamQuoteTemplatesList }">
            
                            <tr data-bind="event: { click: $parent.onClickTeamQuoteTemplateItem }">

                                 <td>
                                     <input type="hidden" data-bind="value: $data.Id" />
                                     <span data-bind="text: Name" /></td>
                                <td>   
                                    <span data-bind="text: $data.RdlPath" ></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </fieldset>
            </div>

            <!-- end span --> 


            <!-- span -->
            <div class="span4">
                <fieldset style="align-content: center">
                    <center><span class="label label-info">Add / Remove QuoteTemplates to Teams</span></center>
                    <p></p>
                    <br />
                    <center>
                        <p>
                            <a href="#" title="Remove QuoteTemplate From Team" data-bind="click: click_RemoveQuoteTemplateFromTeam " class="btn btn-primary"><i class="icon-chevron-left icon-white"></i></a>
                            <a href="#" title="Add QuoteTemplate To Team" data-bind="click: click_AddQuoteTemplateToTeam" class="btn btn-primary"><i class="icon-chevron-right icon-white"></i></a>
                        </p>

                    </center>
                </fieldset>
            </div>

            <!-- end span -->

            <!-- span -->

            <div class="span4">
                <fieldset>
                   
                    <p><select data-bind="options: QuoteTemplatesForTeamSelectList, optionsText: 'name', optionsValue: 'key', value: selectedQuoteTemplateForTeamSelectList" size="10"></select></p>
                    <p><a href="#" title="Edit" data-bind="click: click_SaveTeamQuoteTemplates" class="btn btn-primary"><i class="icon-pencil icon-white"></i> Save Team QuoteTemplates</a></p>
                
                </fieldset>
            </div>
            <!-- end span -->
    
        </div>
    </div>





<!-- Add / Edit Links -->

            <div id="CreateEditQuoteTemplate_ModalAlert" class="val-alert modal hide fade">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					<i class="icon-remove"></i>
				</button>
				<span data-bind="text: createEditTitle"></span>
			</div>
			<div class="modal-body">
				
			    <!-- Create Team Body -->
                
                <form id="formCreateEditQuoteTemplate">

			    <table data-bind="with: selectedAllQuoteTemplate">
                    
                    <tr>
                        <td>Name </td>
                        <td>
                            <p>
                                <input type="text" data-bind="value: Name" required>
                                
                                </p>
                        </td>
                    </tr>
                    
                    <tr>
                        <td>RdlPath </td><td>
                                     
                                           
                                         <p>
                                <input type="text" data-bind="value: RdlPath" required>
                                
                                </p>


                                    </td>
                    </tr>
                  
                   
                </table>

                  </form>  
                <!-- Create Team Body -->


			</div>
			<div class="modal-footer">
				<a href="#" class="btn btn-small" data-dismiss="modal" data-bind="click: click_CancelCreateEdit">Cancel</a>
				<a href="#" class="btn btn-small btn-primary" data-bind="click: click_CreateQuoteTemplate, visible: createButtonVisible" >Save Quote Template</a>
                <a href="#" class="btn btn-small btn-primary" data-bind="click: click_EditQuoteTemplate, visible: editButtonVisible" >Save Quote Template</a>
			</div>
		</div>

    
